<%= content_for :body do %>
  <%= form_tag login_path do %>
    <h4>Login</h4>
    <div class="form-group">
      <%= label_tag :username %>
      <%= text_field_tag :username, (params[:username] unless params[:username].blank?), class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= label_tag :password %>
      <%= password_field_tag :password, (params[:password] unless params[:password].blank?), class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= submit_tag :submit, class:"btn btn-primary", value: "Login"%>
    </div>
  <% end %>
  <% if flash.any? %>
    <% flash.each do |key, value| %>
      <%= content_tag :div, value, class: "alert alert-#{key}" %>
    <% end %>
  <% end %>
<% end %>
